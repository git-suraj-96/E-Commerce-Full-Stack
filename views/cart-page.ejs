    <div
      class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden"
    >
      <main class="layout-container flex h-full grow flex-col">
        <div class="px-4 sm:px-6 lg:px-10 flex flex-1 justify-center py-5">
          <div
            class="layout-content-container flex flex-col w-full max-w-7xl flex-1"
          >
            <!-- PageHeading -->
            <div class="flex flex-wrap justify-between gap-3 pt-4 pb-8">
              <h1
                class="text-[#2D2D2D] dark:text-white text-4xl font-black leading-tight tracking-[-0.033em] shopping-bag"
              >
                Shopping Bag (<%= cartItems.length %> items)
              </h1>
            </div>
            <div
              class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12 items-start"
            >
              <!-- Product List Area (Left Column) -->
              <div class="lg:col-span-2 flex flex-col gap-4 parent-tag  ">
                <!-- ListItem -->
                <% if(cartItems.length > 0){ cartItems.forEach(item => { %>
                  <div
                  class="flex flex-col sm:flex-row gap-6 bg-white dark:bg-gray-800/50 p-6 rounded-xl border border-gray-200 dark:border-gray-700 justify-between items-start cart-item"
                >
                  <div class="flex w-full items-start gap-4">
                    <div
                      class="bg-center bg-no-repeat aspect-square bg-cover rounded-lg h-28 w-28 flex-shrink-0"
                      data-alt="Classic Crew Neck T-Shirt in white"
                      style="
                        background-image: url('/images/uploads/<%= item.productImage %>');
                      "
                    ></div>
                    <div class="flex flex-1 flex-col justify-center gap-1">
                      <p
                        class="text-[#2D2D2D] dark:text-white text-base font-semibold leading-normal"
                      >
                        <%= item.description %>
                      </p>
                      <p
                        class="text-gray-500 dark:text-gray-400 text-sm font-normal leading-normal"
                      >
                        ₹ <%= item.price %>
                      </p>

                      <div
                        class="flex items-center gap-2 text-[#2D2D2D] dark:text-white mt-3"
                      >
                        <button
                          class="text-base font-medium leading-normal flex h-8 w-8 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700 cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-600"
                        >
                          -
                        </button>
                        <input
                          class="text-base font-medium leading-normal w-8 p-0 text-center bg-transparent focus:outline-0 focus:ring-0 focus:border-none border-none [appearance:textfield] [&amp;::-webkit-inner-spin-button]:appearance-none [&amp;::-webkit-outer-spin-button]:appearance-none"
                          type="number"
                          value="1"
                        />
                        <button
                          class="text-base font-medium leading-normal flex h-8 w-8 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700 cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-600"
                        >
                          +
                        </button>
                      </div>
                    </div>
                  </div>
                  <div
                    class="flex flex-row sm:flex-col items-center gap-4 self-start pt-2 parent-tag-child"
                  >
                    <button
                      class="text-gray-500 dark:text-gray-400 hover:text-red-500 dark:hover:text-red-500"
                    >
                      <span class="material-symbols-outlined text-xl delete-cart" data-post = "<%= item._id %>"
                        >delete</span
                      >
                    </button>
                    <button
                      class="text-gray-500 dark:text-gray-400 hover:text-primary"
                    >
                      <span class="material-symbols-outlined text-xl"
                        >bookmark_add</span
                      >
                    </button>
                  </div>
                </div>
                <% })} %>

