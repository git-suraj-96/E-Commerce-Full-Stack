    <style type="text/tailwindcss">
      body {
        font-family: "Inter", sans-serif;
      }

    </style>
    <script id="tailwind-config">
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#1754cf",
              "background-light": "#f6f6f8",
              "background-dark": "#111621",
            },
            fontFamily: {
              display: ["Inter"],
