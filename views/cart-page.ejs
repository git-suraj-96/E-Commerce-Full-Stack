              <!-- Order Summary Card (Right Column) -->
               <% if(cartItems.length > 0){ %>
                 <div class="lg:col-span-1 order-summary">
                   <div class="sticky top-10">
                     <div
                       class="bg-white dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700 p-6 flex flex-col gap-4"
                     >
                       <h2
                         class="text-xl font-bold text-[#2D2D2D] dark:text-white"
                       >
                         Order Summary
                       </h2>
                       <div class="space-y-3 text-sm">
                         <div class="flex justify-between">
                           <span class="text-gray-500 dark:text-gray-400"
                             >Subtotal</span
                           >
                           <span class="font-medium text-[#2D2D2D] dark:text-white sub-total"
