                  />
                  <div class="flex-grow">
                    <p class="font-bold text-[#111318] dark:text-white">
                      <%= item.description %>
                    </p>
                    <p class="text-sm text-[#616f89] dark:text-gray-400">
                      Qty: 1
                    </p>
                  </div>
                  <p class="font-bold text-[#111318] dark:text-white">
                    ₹ <%= item.price %>
                  </p>
                </div>
                <%})%> <%}%>

